@model IEnumerable<AppergerWeb.Models.ImagenTratamiento>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Nuevo Tratamiento", "Create", new {tratamientoId = ViewBag.tratamientoId })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Imagen.sImagen)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tratamiento.nIdTratamiento)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Imagen.sDescripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tratamiento.nIdTratamiento)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.nIdImagenTra }) |
            @Html.ActionLink("Details", "Details", new { id=item.nIdImagenTra }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.nIdImagenTra })
        </td>
    </tr>
}

</table>
