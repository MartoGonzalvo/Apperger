@using AppergerWeb.Models
@model usuario

@{
    
    ViewBag.Title = "CrearEditarUsuario";
}



@using (Html.BeginForm("CrearEditarUsuario1", "web")) 
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.nIdUsuario)
    @Html.HiddenFor(model => model.dFechaNacimiento)
    <div class="form-control-lg">
        <h4>Crear o Editar Paciente</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
       


        <div class="form-group row">
            <div class="col-md-6">
                @Html.LabelFor(model => model.sNombre, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.sNombre, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.sNombre, "", new { @class = "text-danger" })
            </div>
        
            
            <div class="col-md-6">
                @Html.LabelFor(model => model.sApellido, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.sApellido, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.sApellido, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
          
            <div class="col-md-4">
                @Html.LabelFor(model => model.nEdad, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.nEdad, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nEdad, "", new { @class = "text-danger" })
            </div>
       
           
            <div class="col-md-4">
                @Html.LabelFor(model => model.sMatricula, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.sMatricula, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.sMatricula, "", new { @class = "text-danger" })
            </div>
           
            <div class="col-md-4">
                @Html.LabelFor(model => model.dFechaNacimiento, htmlAttributes: new { @class = "control-label col-md-2" })
                <div>
                    @Html.EditorFor(model => model.dFechaNacimiento, new { htmlAttributes = new { @class = "datepicker col-md-12", type = "date" } })
                    @Html.ValidationMessageFor(model => model.dFechaNacimiento, "", new { @class = "text-danger" })

                </div>
              
            </div>
        </div>

        <div class="form-group" >
         
        </div>

        <div class="form-group row" >
            <div class="col-md-4">
                @Html.LabelFor(model => model.sPais, htmlAttributes: new { @class = "control-label col-md-2" })

                @Html.EditorFor(model => model.sPais, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.sPais, "", new { @class = "text-danger" })
            </div>
       
            <div class="col-md-4">

                @Html.LabelFor(model => model.sProvincia, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.sProvincia, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.sProvincia, "", new { @class = "text-danger" })
            </div>
        
            
            <div class="col-md-4">
                @Html.LabelFor(model => model.sCiudad, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.sCiudad, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.sCiudad, "", new { @class = "text-danger" })
            </div>
        </div>

        

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-success" />
            </div>
        </div>
    </div>
}

