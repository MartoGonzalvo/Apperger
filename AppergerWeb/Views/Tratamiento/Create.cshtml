@model AppergerWeb.Models.Tratamiento

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <br />
    <h4>Crear tratamiento</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.dFechaInicio, "Fecha Inicio", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.dFechaInicio, new { htmlAttributes = new { @class = "datepicker col-md-12", type = "date" } })
            @Html.ValidationMessageFor(model => model.dFechaInicio, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.dFechaFin, "Fecha Fin", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.dFechaFin, new { htmlAttributes = new { @class = "datepicker col-md-12", type = "date" } })
            @Html.ValidationMessageFor(model => model.dFechaFin, "", new { @class = "text-danger" })
        </div>
    </div>



    <div class="form-group">
        @Html.LabelFor(model => model.nIdPaciente, "Paciente", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("nIdPaciente", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.nIdPaciente, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.bSelfie, "Actividad reconocimiento de Selfie", htmlAttributes: new { @class = "control-label col-md-6" })
        <div class="col-md-10">
            @Html.DropDownList("bSelfie", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.bSelfie, "", new { @class = "text-danger" })

        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.bImagen, "Actividad con Imagenes", htmlAttributes: new { @class = "control-label col-md-6" })
        <div class="col-md-10">
            @Html.DropDownList("bImagen", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.bImagen, "", new { @class = "text-danger" })

        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.bVideo, "Actividad con Videos", htmlAttributes: new { @class = "control-label col-md-6" })
        <div class="col-md-10">
            @Html.DropDownList("bVideo", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.bVideo, "", new { @class = "text-danger" })

        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Crear" class="btn btn-success" />
        </div>
    </div>
</div>
}

