@model IEnumerable<AppergerWeb.Models.Tratamiento>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Tratamientos</h2>
<p>

    @Html.ActionLink(" Crear Tratamiento ", "Create", "web", new { @class = "btn btn-info btn-sm " })
</p>
<div class="row">
    <!-- column -->
    <div class="col-lg-12">
        <div class="card">
            <div class="card-block">
                <div class="table-responsive">
                    <table class="table ">
                        <thead>
                            <tr>
                                <th>
                                    Paciente
                                </th>
                                <th>
                                    Inicio
                                </th>
                                <th>
                                    Fin
                                </th>

                                <th>
                                    Acciones
                                </th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.usuario.sUsuario)
                                    </td>
                                 
                                    <td>
                                        @Html.DisplayFor(modelItem => item.dFechaInicio)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.dFechaFin)
                                    </td>


                                    <td>
                                        @if (item.bImagen == true)
                                        {
                                            <a href="@Url.Action("Index", "ImagenTratamiento", new { tratamientoId=item.nIdTratamiento })"><i class="far fa-images"></i></a>
                                        }


                                        @if (item.bVideo == true)
                                        {
                                            <a href="@Url.Action("Index", "VideoTratamiento", new { tratamientoId = item.nIdTratamiento })"> <i class="fas fa-video"></i></a>
                                        }
                                            <a href="@Url.Action("Estadisticas", "Tratamiento", new { TratamientoId=item.nIdTratamiento })"><i class="fas fa-chart-line"></i></a>

                                            <a href="@Url.Action("Delete", "Tratamiento", new { id=item.nIdTratamiento  })"> <i class="fas fa-trash-alt text-danger"></i></a>

                                        </td>
                                </tr>

                            }
                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
